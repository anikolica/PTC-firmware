module demux_1_8(
		 input [2:0] sel,
		 input	    i,
		 output reg y0, y1, y2, y3, y4, y5, y6, y7);

   always @(*) begin
      case(sel)
	2'h0: {y0,y1,y2,y3,y4,y5,y6,y7} = {i, 6'b0};
	2'h1: {y0,y1,y2,y3,y4,y5,y6,y7} = {1'b0, i, 5'b0};
	2'h2: {y0,y1,y2,y3,y4,y5,y6,y7} = {2'b0, i, 4'b0};
	2'h3: {y0,y1,y2,y3,y4,y5,y6,y7} = {3'b0, i, 3'b0};
	2'h4: {y0,y1,y2,y3,y4,y5,y6,y7} = {4'b0, i, 2'b0};
	2'h5: {y0,y1,y2,y3,y4,y5,y6,y7} = {5'b0, i, 1'b0};
	2'h6: {y0,y1,y2,y3,y4,y5,y6,y7} = {6'b0, i};
	
